doctype html 
html
  head
    meta(charset='utf-8')
  body
    h1 
      a(href='/topic' style='text-decoration-line : none') Server Side Javascript
    ul <!-- jade에서의 프로그래밍도 들여쓰기 생각해야함 -->
      each topic in topics
        li
          a(href=`/topic/${topic.id}`)= topic.title
    article 
      form(action="/topic/"+topic.id+'/edit' method='post')
        p 
          input(type='text' name='title' value=topic.title placeholder='title')
        p 
          textarea(name='description' placeholder='description')= topic.description
        p 
          input(type='text' name='author' value=topic.author placeholder='author')
        p 
          input(type='submit' value='수정하기' style='border : none; margin : 10px; background-color: #42A500; color: white; padding: 15px 25px;; text-align: center; text-decoration: none; display: inline-block')
      
